{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./*",
    "skipLibCheck": true,
    "paths": {
      "@server/*": ["./*"],
      "@root/*": ["../src/*"]
    }
  },
  "include": ["src/*"]
}
